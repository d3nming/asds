<Window x:Class="HouseholdRepair.View.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HouseholdRepair.View"
        mc:Ignorable="d"
        Title="UserForm" Height="850" MaxHeight="1050" MaxWidth="1400"
        MinHeight="650" MinWidth="1000"
        Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="ToAdd" FontSize="25" Margin="136,77,136,31" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Click="ToAdd_Click" >
            Создать заявку
        </Button>
        <Button x:Name="ToMine" FontSize="25" Margin="140,22,136,76" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Click="ToMine_Click" >
            Просмотреть свои заявки
        </Button>
    </Grid>
</Window>
